{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "es2017"
    ],
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "inlineSources": true,
    "outDir": "dist/esm",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "files": [
    "src/index.ts"
  ]
}
