{
  "name": "@capgo/camera-preview",
  "version": "6.2.24",
  "description": "Camera preview",
  "author": "Martin Donadieu <martindonadieu@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Cap-go/camera-preview.git"
  },
  "bugs": {
    "url": "https://github.com/Cap-go/camera-preview/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "main": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "CapgoCameraPreview.podspec",
    "android/",
    "dist/",
    "ios/"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --autocorrect --format",
    "eslint": "eslint .",
    "prettier": "prettier --config .prettierrc.js \"**/*.java\"",
    "swiftlint": "node-swiftlint",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.mjs",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "docgen": "docgen --api CameraPreviewPlugin --output-readme README.md --output-json dist/docs.json",
    "prepublishOnly": "npm run build",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "@capacitor/core": "^6.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@antfu/eslint-config": "^2.16.1",
    "@capacitor/android": "^6.0.0",
    "@capacitor/cli": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/docgen": "^0.2.2",
    "@capacitor/ios": "^6.0.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^1.1.2",
    "eslint": "^9.1.1",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "prettier-plugin-java": "^2.6.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.17.1",
    "swiftlint": "^1.0.2",
    "typescript": "^5.4.5"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "prettier": "@ionic/prettier-config"
}
